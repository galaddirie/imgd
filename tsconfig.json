{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "paths": {
      "@/*": ["./assets/vue/*"],
      "*": [
        "./deps/*",
        "node_modules/*"
      ]
    },
    "strict": true,
    "types": [
      "vite/client"
    ]
  },
  "include": [
    "./assets/js/**/*",
    "./assets/vue/**/*",
    "./lib/imgd_web/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}